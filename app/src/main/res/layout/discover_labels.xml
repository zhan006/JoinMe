<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="10dp"
              android:layout_marginLeft="20dp">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Topic"
                android:text="Topic"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                style="@style/bold_text"/>
        <Button
            style="@style/detail_button"
            android:id="@+id/study_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Study"
            android:textAllCaps="false"
            />
        <Button
            style="@style/detail_button"
            android:id="@+id/entertainment_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Entertainment"
            android:textAllCaps="false"
            />
        <Button
            style="@style/detail_button"
            android:id="@+id/daily_life_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Daily Life"
            android:textAllCaps="false"
            />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Distance"
                android:text="Distance"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                style="@style/bold_text"/>

        <Button
            style="@style/detail_button"
            android:id="@+id/within1_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Within 1km"
            android:textAllCaps="false"
            />
        <Button
            style="@style/detail_button"
            android:id="@+id/within5_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Within 5km"
            android:textAllCaps="false"
            />
        <Button
            style="@style/detail_button"
            android:id="@+id/distance_all_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="All"
            android:textAllCaps="false"
            />

    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Date"
                android:text="Date"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                style="@style/bold_text"/>
        <Button
            style="@style/detail_button"
            android:id="@+id/today_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Today"
            android:textAllCaps="false"
            />
        <Button
            style="@style/detail_button"
            android:id="@+id/this_week_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="This Week"
            android:textAllCaps="false"
            />
        <Button
            style="@style/detail_button"
            android:id="@+id/this_month_button"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="This Month"
            android:textAllCaps="false"/>


    </LinearLayout>

</LinearLayout>