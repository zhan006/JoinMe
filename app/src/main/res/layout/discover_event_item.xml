<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="15dp"
    android:background="@drawable/path490">
    <LinearLayout
        android:id="@+id/event_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Dinner Together"
            style="@style/bold_text"/>
        <TextView
            android:id="@+id/event_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="August 5th, 17:00"
            style="@style/normal_text"/>
        <TextView
            android:id="@+id/event_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:text="45 Lygon St,Carlton"
            style="@style/normal_text"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        >
        <Button
            style="@style/bright_button"
            android:id="@+id/detail_button"
            android:layout_marginBottom="15dp"
            android:text="Detail"
            />

        <Button
            android:id="@+id/join_button"
            style="@style/bright_button"
            android:layout_height="26dp"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:text="Join" />
    </LinearLayout>

</RelativeLayout>
